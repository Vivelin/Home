@model Vivelin.Home.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

@if (Model.Quote != null)
{
    <blockquote commonmark="@Model.Quote.Text">
        <footer>
            <span>&mdash;</span>
            <cite>@Html.Raw(Model.Quote.Citation)</cite>
        </footer>
    </blockquote>
}
else
{
    <p>The quick brown fox jumped over the lazy dog.</p>
}